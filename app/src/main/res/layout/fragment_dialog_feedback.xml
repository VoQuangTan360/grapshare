<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:name="androidx.navigation.fragment.NavHostFragment"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/textColor"
    app:cardCornerRadius="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:paddingVertical="20dp"
        android:minWidth="520dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác nhận "
            android:layout_marginBottom="20dp"
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            android:textSize="25dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
          >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgProfileRequest"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/hamzi" />
                </androidx.coordinatorlayout.widget.CoordinatorLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtnameRequet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Võ Quang Tấn"


                        android:layout_marginTop="5dp"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    <RelativeLayout
                        android:id="@+id/rating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txtPlaceDRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="3"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            app:drawableStartCompat="@drawable/ic_rating"
                            app:drawableTint="@color/primaryColor" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txtPlaceDRatingCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/txtPlaceDRating"
                            android:gravity="center"
                            android:paddingStart="15dp"
                            android:paddingEnd="1dp"
                            android:paddingTop="2dp"
                            android:text="(123)"
                            android:textColor="@color/itemTextColor" />




                    </RelativeLayout>
                    <TextView
                        android:id="@+id/txtvehicle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vehicle"
                        android:textColor="@color/teal_700"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/txtIDR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="1sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txtIDP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="1sp"
                android:textStyle="bold"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thời gian đi"
                    android:layout_marginHorizontal="16dp"

                    android:textColor="@color/black"

                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/textTimeStartF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="@color/teal_700"
                    android:text="20:20"
                    android:textSize="18sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tin nhắn"
                    android:layout_marginHorizontal="16dp"

                    android:textColor="@color/black"

                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textMess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:textColor="@color/teal_700"
                    android:text="20:20"
                    android:fontFamily="@font/comfortaabold"
                    android:textSize="18sp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/backgroung_gray"
                android:text="Thoát"
                android:visibility="gone"
                android:textColor="@color/textColor"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDeny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/backgroung_red"
                android:text="Từ chối"
                android:textColor="@color/textColor"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/backgroung_green"
                android:text="Chấp nhận"
                android:textColor="@color/textColor"
                />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>