<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.NearPlaceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/map_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn khoản cách"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/blue"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_marginHorizontal="16dp"
                android:paddingTop="0dp"
                app:boxBackgroundColor="@color/textColor"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:gravity="center"

                >
                <AutoCompleteTextView
                    android:id="@+id/auto_slect_distance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="none"
                    android:layout_marginTop="0dp"
                   android:background="@drawable/backgroung_blue_boder"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/txtCountPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/Daryellow"
                android:fontFamily="@font/comfortaabold"
                />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/NearRecyclerView"
            android:layout_width="match_parent"

            android:outlineAmbientShadowColor="@color/blue"
            android:outlineSpotShadowColor="@color/blue"
            android:layout_height="0dp"
            android:layout_weight="9"/>
    </LinearLayout>


</FrameLayout>